<% items && items.each( function (item) { %>
  <div class="item group">

    <ul class="item-details">
      <li class="attr" id="label" data="<%= item.id %>">
        <%= item.escape('label') %>
      </li>
      <li class="attr" id="points" data="<%= item.id %>">
        <%= item.escape('points') %> Points
      </li>
      <li id="completed" data="<%= item.id %>">â–¢</li>
    </ul>

    <ul class="description hidden" data="<%= item.id %>">
      <% if (item.escape('duedate')) { %>
        <li>Due: <%= item.escape('duedate') %></li>
      <% } %>
      <li><%= item.escape('description') %></li>
      <li>
        <% if (Cohabitate.currentUser.escape('is_leader') === "true") { %>
          <a href="#">Remove Task</a>
          <a href="#">Edit Task</a>
        <% } %>
      </li>
    </ul>
  </div>
<% }) %>
