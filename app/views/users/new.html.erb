<h1>Sign Up for CohabitateRPG!</h1>

<form action="<%= users_url %>" method='POST'>
  <%= auth_token_input %>
  <%= render "shared/errors" %>

  <div class="sign-in-redirect">Already a member? <a href="<%= new_session_url %>">Sign In!</a>
  <br><br>

  <label>Email
    <input type="text" name="user[email]" value="<%= @user.email if @user %>">
  </label>
    <br>
  <label>Password
    <input type="password" name="user[password]">
  </label>
    <br>

  <input type="submit" value="Begin Your Quest">
</form>
