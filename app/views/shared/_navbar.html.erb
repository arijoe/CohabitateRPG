<navbar class="session-links group">


  <% if current_user %>

    <% if current_user.quest %>

      <form action="<%= user_url(current_user) %>" method="POST">
        <%= auth_token_input %>
        <input type="hidden" name="_method" value="get">
        <button class="profile-button">My Profile</button>
      </form>

      <form action="<%= session_url %>" method="POST">
        <%= auth_token_input %>
        <input type="hidden" name="_method" value="delete">
          <button class="session-button">Sign Out</button>
      </form>

    <% else %>

      <form action="/#/quest/new" method="POST">
        <%= auth_token_input %>
        <input type="hidden" name="_method" value="get">
        <button class="session-button">Play!</button>
      </form>

      <form action="<%= session_url %>" method="POST">
        <%= auth_token_input %>
        <input type="hidden" name="_method" value="delete">
          <button class="session-button">Sign Out</button>
      </form>

  <% end %>


  <% else %>

    <a class="logo" href="<%= root_url %>">COHABITATE</a>

    <form action="<%= new_user_url %>" method="POST">
      <%= auth_token_input %>
      <input type="hidden" name="_method" value="get">
      <button class="session-button">Play!</button>
    </form>

  <% end %>
</navbar>
