<h2>Sign In</h2>

<form action="<%= session_url %>" method='post'>
  <%= auth_token_input %>
  <%= render "shared/errors" %>

  <div class="sign-in-redirect">Not yet a member? <a href="<%= new_user_url %>">Sign Up!</a>
  <br><br>

  <label>Email
    <input type="text" name="user[email]" value="<%= @user.email if @user %>">
  </label>
  <br>
  <label>Password
    <input type="password" name="user[password]">
  </label>
  <br>

  <input type="submit" value="Sign In">
</form>
